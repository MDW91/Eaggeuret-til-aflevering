<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EggTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/EggLightYellow</item>
        <item name="colorPrimaryDark">@color/EggYellow</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/BlackTitleTextColor</item>
        <item name="android:actionBarStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/BlackTitleTextColor</item>
    </style>


</resources>
